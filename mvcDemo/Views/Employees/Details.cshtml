@model mvcDemo.Models.Employee
@{
    ViewBag.Title = "Details";
}


<div style="font-family:Arial">
    <h2>Employee Information</h2>
   
     <table>
        <tr>
            <td>Employee Id : </td>
            <td>@Model.id</td>
        </tr>
        <tr>
            <td>Name : </td>
            <td>@Model.name</td>
        </tr>
        <tr>
            <td>Age : </td>
            <td>@Model.age</td>
        </tr>
        <tr>
            <td>City : </td>
            <td>@Model.City</td>
        </tr>
    </table>
    @* back to employees list by parameter of depId of these employees*@
    @Html.ActionLink("Back to the List", "Index", new { departmentId = Model.departmentId })
</div>